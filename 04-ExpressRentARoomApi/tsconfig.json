{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "#dals/*": ["dals/*"]
    }
  },
  "include": ["src/**/*"]
}
